extends layout


block content
  h1= title
  p Welcome to #{title}
  - var results = theBeers
  div(class="container-fluid") 
  div(class="row")
  -
  each item,index in results
    div(class="col-sm-2 "  onclick=`buy(${index})`) #{item.name} - #{item.type} - #{item.price} 
  script.
    function buy(itemNo){
      alert(`You purchased Item ${itemNo+1}`)
    }